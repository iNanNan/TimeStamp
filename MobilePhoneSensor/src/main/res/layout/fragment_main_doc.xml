<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/doc_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/app_general_10dp"
    android:gravity="center_horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fragment_doc"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowColor="@color/colorPrimary"
        android:shadowRadius="5"/>

    <com.mobilephonesensor.widgets.ShadowImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@android:color/transparent"
        android:src="@mipmap/nan_for_qq"
        android:scaleType="center"
        android:layout_margin="@dimen/app_general_15dp"
        app:siv_cornerRadius="@dimen/app_general_10dp"
        app:siv_cornerBLRadius="@dimen/app_general_15dp"
        app:siv_shadowWidth="5dp"
        app:siv_shadowStartColor="@android:color/holo_green_dark"/>
</LinearLayout>