<?xml version="1.0" encoding="utf-8"?>
<com.base.view.refresh.PtrFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/act_test_refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/act_test_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_general_60dp"
            android:background="@android:color/black" />

        <TextView
            android:id="@+id/act_test_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/app_general_15dp"
            android:paddingTop="@dimen/app_general_15dp"
            android:background="#FFFFFF"/>


        <ImageSwitcher
            android:id="@+id/act_test_switcher"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:inAnimation="@anim/alpha_in"
            android:outAnimation="@anim/alpha_out" />
    </LinearLayout>
</com.base.view.refresh.PtrFrameLayout>