<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ViewPagerIndicator -->
    <declare-styleable name="ViewPagerIndicator">
        <attr name="setShowTabs" format="integer"/>
        <attr name="setIndicatorWidth" format="dimension"/>
        <attr name="setIndicatorHeight" format="dimension"/>
        <attr name="setIndicatorColor" format="color"/>
        <attr name="indicatorBackground" format="boolean"/>
        <attr name="setIndicatorBackground" format="color"/>
        <attr name="setIndicatorPaddingBottom" format="dimension"/>
        <attr name="tabLayout" format="reference"/>
    </declare-styleable>
    <!-- DragLayout -->
    <declare-styleable name="DragLayout">
        <attr name="shadow" format="boolean"/>
        <attr name="shadowColor" format="color"/>
        <attr name="shadowWidth" format="dimension"/>
    </declare-styleable>
    <!-- ShadowImageView -->
    <declare-styleable name="ShadowImageView">
        <attr name="siv_cornerRadius" format="dimension"/>
        <!-- 左上角圆角半径 -->
        <attr name="siv_cornerTLRadius" format="dimension"/>
        <!-- 右上角圆角半径 -->
        <attr name="siv_cornerTRRadius" format="dimension"/>
        <!-- 左下角圆角半径 -->
        <attr name="siv_cornerBLRadius" format="dimension"/>
        <!-- 右上角圆角半径 -->
        <attr name="siv_cornerBRRadius" format="dimension"/>
        <attr name="siv_shadowWidth" format="dimension"/>
        <attr name="siv_shadowStartColor" format="color"/>
        <attr name="siv_shadowEndColor" format="color"/>

        <attr name="siv_shape" format="enum">
            <enum name="siv_rect" value="0"/>
            <enum name="siv_oval" value="1"/>
            <enum name="siv_circle" value="2"/>
        </attr>

        <attr name="siv_borderWidth" format="dimension"/>
        <attr name="siv_borderColor" format="color"/>
    </declare-styleable>
</resources>